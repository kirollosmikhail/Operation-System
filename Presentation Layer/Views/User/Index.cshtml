@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class="m-2">
    <form class="row offset-2" asp-action="Index">
        <div class="col-8">
            <input class="form-control" type="text" name="Search" placeholder="User's' Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-info" />
        </div>
    </form>
</div>
@if(Model.Count()>0)
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(u =>u.Id)</th>
                <th>@Html.DisplayNameFor(u =>u.Fname)</th>
                <th>@Html.DisplayNameFor(u =>u.Lname)</th>
                <th>@Html.DisplayNameFor(u =>u.Email)</th>
                <th>@Html.DisplayNameFor(u =>u.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(u =>u.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var User in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(u=>User.Id)</td>
                    <td>@Html.DisplayFor(u=>User.Fname)</td>
                    <td>@Html.DisplayFor(u=>User.Lname)</td>
                    <td>@Html.DisplayFor(u=>User.Email)</td>
                    <td>@Html.DisplayFor(u=>User.PhoneNumber)</td>
                    <td>@string.Join(",",User.Roles)</td>
                    <partial name="_ButtonsPartialView" model="@User.Id" />
                </tr>
            }
            
        </tbody>
    </table>


}
else
{
    <div>
        <h1>There Is No Users</h1>
    </div>
}

