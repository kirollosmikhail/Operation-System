@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}
<a asp-action="Create" class="btn btn-success">Add New Role</a>
<br />

<div class="m-2">
    <form class="row offset-2" asp-action="Index">
        <div class="col-8">
            <input class="form-control" type="text" name="Search" placeholder="User's' Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-info" />
        </div>
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(u => u.Id)</th>
                <th>@Html.DisplayNameFor(u => u.RoleName)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(u => Role.Id)</td>
                    <td>@Html.DisplayFor(u => Role.RoleName)</td>
                    <partial name="_ButtonsPartialView" model="@Role.Id" />
                </tr>
            }

        </tbody>
    </table>


}
else
{
    <div>
        <h1>There Is No Roles</h1>
    </div>
}

