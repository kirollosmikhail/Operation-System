@model IEnumerable<Department>

@{
    ViewData["Title"] = "All Departments";
}

<a asp-action="Create" class="btn btn-success">Create New Department</a>
<br />
@if (Model.Count() > 0)
{
    <h1>All Departments</h1>
    <br />
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(x => x.Code)</td>
                <td>@Html.DisplayNameFor(x => x.Name)</td>
                <td>@Html.DisplayNameFor(x => x.DateOfCreation)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(x => item.Code)</td>
                    <td>@Html.DisplayFor(x => item.Name)</td>
                    <td>@Html.DisplayFor(x => item.DateOfCreation)</td>
                    <td><a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a></td>
                    <td><a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Departments</h3>
    </div>
}